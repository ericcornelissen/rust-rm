# Check out EditorConfig at: https://editorconfig.org

root=true

[*]
charset=utf-8
insert_final_newline=true
max_line_length=100
trim_trailing_whitespace=true

[Containerfile*]
indent_style=tab

[Justfile]
indent_style=tab

[{*.md,LICENSE}]
indent_size=unset
indent_style=space

[*.rs]
indent_size=4
indent_style=space

[*.toml]
indent_size=4
indent_style=space

[*.{yml,yaml}}]
indent_size=2
indent_style=space
